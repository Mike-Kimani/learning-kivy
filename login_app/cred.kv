<CreateAccountWindow>:
    name: "create"
    
    namee: namee
    email: email
    password: passw

    FloatLayout:
        cols:1
        FloatLayout:
            size: root.width, root.height/2
            Label:
                text: "Create an Account"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4
            Label:
                text: "Name: "
                size_hint: 0.5, 0.12
                pos_hint: {"x":0, "top":0.8}
                font_size: (root.width**2 + root.height**2) / 14**4
            
            TextInput:
                id:namee
                multiline: False
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                font_size: (root.width**2 + root.height**2) / 14**4


                    
            Label:
                text: "Email: "
                size_hint: 0.5, 0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                font_size: (root.width**2 + root.height**2) / 14**4
            TextInput:
                id: email
                multiline: False
                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.4, 0.12
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                text: "Password: "
                multiline: False
                pos_hint: {"x":0, "top":0.8-0.13*2}
                font_size: (root.width**2 + root.height**2) / 14**4
            TextInput:
                id: passw
                multiline: False
                pos_hint: {"x":0.5, "top": 0.8-0.13*2}
                size_hint: 0.4, 0.12
                #password: True
                font_size: (root.width**2 + root.height**2) / 14**4 

        Button:
            text: "SUBMIT"
            font_size: (root.width**2 + root.height**2) / 14**4
            size_hint: 0.6, 0.15
            pos_hint: {"x":0.2, "y":0.25}
            on_release: 
                root.manager.transition.direction= "left"
                #root.submit()
        Button:
            text: "Already have an account? Log in"
            font_size: (root.width**2 + root.height**2) / 17**4
            size_hint: 0.4, 0.1
            pos_hint: {"x":0.3, "y":0.05}
            on_release:
                root.manager.transition.direction = "right"
                #root.login()    

<LoginWindow>:
    name: "login"
    email: email
    password: password

    FloatLayout:
        Label:
            pos_hint: {"x":0, "top":0.9}
            size_hint: 0.5, 0.12
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Email: "
        TextInput:
            id: email
            pos_hint: {"x":0.5, "top":0.9}
            size_hint: 0.4, 0.12
            font_size: (root.width**2 + root.height**2) / 13**4 
            multiline: False

        Label:
            pos_hint: {"x":0, "top":0.7 }
            size_hint: 0.5, 0.12
            text: "Password: "
            font_size: (root.width**2 + root.height**2) / 13**4
        TextInput:
            id: password
            pos_hint: {"x":0.5, "top":0.7}
            size_hint: 0.4,0.12
            multiline: False
            font_size: (root.width**2 + root.height**2) / 13**4

        Button:
            size_hint: 0.6, 0.2
            pos_hint: {"x":0.2, "y":0.3}
            text: "LOGIN"
            font_size: (root.width**2 + root.height**2) / 13**4
            on_release:
                root.manager.transition.direction = "left"
                #root.loginBtn()
        Button:
            size_hint: 0.8, 0.15
            pos_hint: {"x":0.1, "y":0.07}
            text: "Don't have an account? Create one."
            font_size: (root.width**2 + root.height**2) / 9**4
            on_release:
                root.manager.transition.direction = "right"
                #root.createBtn()     
            





        


